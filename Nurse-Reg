	      return p;
	   }
	   
	   private static JPanel getSystemPanel() {
	      JRadioButton man = new JRadioButton("남",true);
	      JRadioButton woman = new JRadioButton("여",false);
	      ButtonGroup systemGroup = new ButtonGroup();
	      systemGroup.add(man);
	      systemGroup.add(woman);
	      JPanel p = new JPanel(new GridLayout(1,2));
	      p.add(man);
	      p.add(woman);
	      
	      return p;
	   }

